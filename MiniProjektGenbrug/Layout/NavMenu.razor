@using Core
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MiniProjektGenbrug</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="marked">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Marked
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="mineannoncer">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Mine annoncer
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link" @onclick="ToggleCartPanel">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Min Anmodningskurv
            </a>
        </div>
    </nav>
</div>

@if (showCartPanel)
{
    <div class="cart-panel">
        <button class="close-button" @onclick="ToggleCartPanel">×</button>
        <h4>Min Anmodningskurv</h4>

        @if (cartItems.Any())
        {
            <ul>
                @foreach (var product in cartItems)
                {
                    <li>
                        @product.Productname - @product.Price.ToString("C")
                    </li>
                }
            </ul>
        }
        else
        {
            <p>Kurven er tom</p>
        }

        <div class="buttons-container">
            <button @onclick="ToggleEditMode">Rediger</button>
            <button class="checkout-button">Gå til betaling</button>
        </div>
    </div>
}

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private bool showCartPanel = false;
    private bool isEditing = false;

    private List<Product> cartItems = new List<Product>
    {
    };

    private void ToggleCartPanel() => showCartPanel = !showCartPanel;

    private void ToggleEditMode() => isEditing = !isEditing;
    
}
